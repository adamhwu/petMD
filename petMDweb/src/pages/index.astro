---
import VitalSign from '../components/Vitals.astro'
import Video from '../components/Video.astro'
import VideoStream from '../components/VideoTest.astro'

const socket = new WebSocket(import.meta.env.PUBLIC_SOCKET_URL);
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Live Dashboard</title>
		<style>
			body {
				font-family: sans-serif;
				margin: 0;
				padding: 1rem;
				background-color: #f9fafb;
			}
			.dashboard {
				display: grid;
				grid-template-columns: 1fr;
				gap: 1rem;
			}
			@media (min-width: 768px) {
				.dashboard {
					grid-template-columns: 1fr 1fr;
				}
			}
		</style>
	</head>
	<body>
		<div class="dashboard">
			<Video />
			<VitalSign />
			<VideoStream websocketUrl= {socket} />
		</div>
	</body>
</html>
